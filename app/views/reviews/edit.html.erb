<div class="container mt-5">
  <h3>Edit Review</h3>
  
  <%= form_for(@review) do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>
  
  <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
</div>