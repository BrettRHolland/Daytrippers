<div class="container mt-5">
  <h3>Edit Trip</h3>
  
  <%= form_for(@trip) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  
  <%= f.submit "Update", class: 'btn btn-primary' %>
  <% end %>
</div>
